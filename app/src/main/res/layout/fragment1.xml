<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ff0000">

            <CheckBox
                android:id="@+id/ew"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/sys"
                android:gravity="center"
                android:text="扫啊扫"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:background="@drawable/edit"
                android:drawableLeft="@mipmap/sou"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="京东闪购,问你来不来" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/xx"
                android:gravity="center"
                android:text="消息"
                android:textSize="10dp" />
        </LinearLayout>

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@mipmap/soyetu1" />


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </android.support.v4.view.ViewPager>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@mipmap/soyetu2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:text="京东"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:background="#ED2829"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="快报"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ViewFlipper
                    android:paddingLeft="5dp"
                    android:id="@+id/view_filpper"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"
                    android:autoStart="true"
                    android:flipInterval="3000"
                    android:inAnimation="@anim/anim01"
                    android:outAnimation="@anim/anim02"
                    >

                </ViewFlipper>

                <TextView
                    android:layout_marginLeft="50dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="|   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="更多"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_viewls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@mipmap/guolei" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_ls"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</ScrollView>
